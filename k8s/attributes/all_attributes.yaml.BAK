---
apiVersion: v1
kind: Service
metadata:
  name: adjectives
  namespace: api
spec:
  type: ClusterIP
  ports:
  - port: 8080
    protocol: TCP
    targetPort: 8080
  selector:
    app: adjectives
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: adjectives
  namespace: api
spec:
  replicas: 1
  selector:
    matchLabels:
      app: adjectives
  template:
    metadata:
      labels:
        app: adjectives
    spec:
      containers:
      - name: adjectives
        image: registry.gitlab.com/k8sfch/demo-name-generator/adjectives:latest
        imagePullPolicy: Always
        ports:
        - containerPort: 8080
      imagePullSecrets:
        - name: regcred
